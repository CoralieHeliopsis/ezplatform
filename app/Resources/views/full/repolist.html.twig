{% extends "pagelayout.html.twig" %}

{% block content %}
<section class="buttons">
    <div class="container">
        <div class="row regular-content-size">
            <div class="col-xs-10 col-xs-offset-1 box-style">
                <h3 class="center bottom-plus new-header">Liste des dépôts</h3>
                <table class="table table-hover">
                    <thead>
                    <tr class="table-header">
                        <th data-field="id">Id</th>
                        <th data-field="name">Nom</th>
                        <th data-field="private">Statut</th>
                        <th data-field="description">Description</th>
                        <th data-field="html_url">URL</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for repository in repositories if repository.private == 'true' %}
                        <tr>
                            <td>{{ repository.id }}</td>
                            <td>{{ repository.name }}</td>
                            <td>Privé</td>
                            <td>{{ repository.description }}</td>
                            <td>{{ repository.html_url }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
{% endblock %}